<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.offis.feelslike.insituarousal" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/luncher"
        android:label="FeelsLikeS1"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="de.offis.feelslike.insituarousal.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.offis.feelslike.insituarousal.ArousalInput"
            android:label="@string/title_activity_arousalinput" >
        </activity>

        <service
            android:name="de.offis.feelslike.insituarousal.InputService"
            android:exported="false" >
        </service>

        <service
            android:name=".activityService.ActivityDetectionService"
            android:exported="false">
        </service>

        <activity
            android:name="de.offis.feelslike.insituarousal.LoggingActivity"
            android:label="@string/title_activity_logging" >
        </activity>
    </application>

</manifest>
